{% extends 'base.html.twig' %}

{% block title %}Hello SupplierController!{% endblock %}

{% block body %}
 <form name="frm" method="post" action="">
        <h1>Supplier</h1>
        <p>
            <img src="img/add.png" alt="Add new" width="16" height="16" border="0" /> <a href="{{path('addSupplier')}}"> Add Supplier</a>
        </p>
        <table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th><strong>No.</strong></th>
                    <th><strong>SupplierName</strong></th>
                    <th><strong>Tel</strong></th>
                    <th><strong>Edit</strong></th>
                    <th><strong>Delete</strong></th>
                </tr>
            </thead>
            <tbody>
            {% for s in supplier %}
                   <tr>
                        <td class="text-center"></td>
                        <td>{{s.SupName}}</td>
                        <td>{{s.Tel}}</td>
                        <td style='text-align:center'>
                            <a href="{{path('editSupplier', {id:s.id})}}">
                                <img src='img/settings.png' width="16" height="16" border='0'/>
                            </a>
                        </td>
                        <td style='text-align:center'>
                            <a href="{{path('deleteSupplier', {id:s.id})}}" onclick=" return deleteConfirm(Are you sure to delete?)">
                            <img src='img/delete.png' width="16" height="16" border="0" /></a></td>
                    </tr>
            {% endfor %}
            </tbody>
        </table>
</form>
{% endblock %}
